SM:
    MenuScreen:
    GameMain:
    GameLevelMenuScreen:
<MenuScreen>:
    name : "game_menu"
    RelativeLayout:
        # Image:
        #     id: 'gif'
        #     source: "fire.gif"
        #     pos: 0,0
        #     size:20,20
        #     anim_loop: 1
        #     allow_stretch: True
        canvas.before:
            Rectangle:
                source: "image/MenuBc.png"
                pos: 0,0
                size: self.parent.size
        Button:
            size_hint: None, None
            center: self.parent.center
            size: 200,50
            text: 'Start Game'
            font_name: 'impact'
            on_press:
                root.manager.current = 'game_level'
                root.manager.transition.direction = 'right'
        Button:
            size_hint: None, None
            center: self.parent.center[0],self.parent.center[1] - 60
            size: 200,50
            text: 'Quit'
            font_name: 'impact'
            on_press: app.stop() 
<GameMain>:
    name: 'start_game'
    on_enter: self.initial()

<GameLevelMenuScreen>:
    name: 'game_level'
    GridLayout:
        cols: 2
        rows: 4
        Label:
            text: 'Hard : random word that have word lenght more than 8 charactor \nat the start of the game, and no clue for any word.'
            font_name: 'impact'
            size: 500,150
        Button:
            id: 'level_btn'
            text: 'Hard'
            font_name: 'impact'
            size_hint_x: None
            width: 300
            on_press:
                root.pressBtn("hard")
                root.manager.current = 'start_game'
                root.manager.transition.direction = 'right'
        Label:
            text: 'Difficult : random word that have word lenght more than 4 charactor \n at the start of the game, and no clue for any word.'
            font_name: 'impact'
            size: 500,150
        Button:
            id: 'level_btn'
            text: 'Difficult'
            font_name: 'impact'
            size_hint_x: None
            width: 300
            on_press:
                root.manager.current = 'start_game' 
                root.manager.transition.direction = 'right'
        Label:
            text: 'Still Difficult ( but easier :) ) : random word that have word lenght more \n than 4 charactor at the start of the game, and have\n some clue for every word.'
            font_name: 'impact'
            size: 500,150
        Button:
            id: 'level_btn'
            text: 'Still Difficult ( but easier :) )'
            font_name: 'impact'
            size_hint_x: None
            width: 300
            on_press:
                root.manager.current = 'start_game'
                root.manager.transition.direction = 'right'
        Label:
            size_hint_x: None
            width: 0
        Button:
            text: 'Back'
            font_name: 'impact'
            size_hint_x: None
            width: 300
            on_press:
                root.manager.current = 'game_menu'
                root.manager.transition.direction = 'left'



